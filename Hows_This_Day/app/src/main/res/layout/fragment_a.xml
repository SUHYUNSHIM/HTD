<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7CAC9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✿ Our Profile ✿"
            android:textColor="#F7CAC9"
            android:background="@color/colorAccent"
            android:layout_marginTop="80dp"
            android:textSize="40sp"
            android:gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/my_profile"
                android:maxWidth="200dp"
                android:maxHeight="200dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/redheart" />

            <ImageView
                android:id="@+id/lover_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/lover_profile"
                android:maxWidth="200dp"
                android:maxHeight="200dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_my_UploadPicture"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:text="사진 선택"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_lover_UploadPicture"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:layout_margin="65dp"
                android:onClick="onClick"
                android:text="사진 선택"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❝ D+day ❞"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="80dp"
            android:textSize="40sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/d_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>