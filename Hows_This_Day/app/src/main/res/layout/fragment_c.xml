<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background= "#f7cac9">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="580dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="314dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oooo-o월-o일"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_datechooser"
                    android:layout_width="47dp"
                    android:layout_height="36dp"
                    android:text="♥" />

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginStart="70dp"
                    android:layout_weight="1"
                    android:text="저장 " />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_gallery"
                    android:layout_width="353dp"
                    android:layout_height="289dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="-10dp"
                    app:srcCompat="@drawable/photo_frame" />

                <ImageButton
                    android:id="@+id/get_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/camera" />

                <EditText
                    android:id="@+id/multiAutoCompleteTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#DEB887"
                    android:backgroundTintMode="src_in"
                    android:inputType="textImeMultiLine"
                    android:hint ="일기를 쓰자"
                    android:imeOptions="actionDone"
                    android:textAlignment="textStart" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>